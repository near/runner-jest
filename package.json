{
  "name": "near-runner-jest",
  "version": "0.1.1",
  "description": "Thin wrapper around near-runner to make it easier to use with Jest and TypeScript",
  "repository": "https://github.com/near/runner-jest",
  "author": "Near Inc (team@near.org)",
  "license": "(MIT AND Apache-2.0)",
  "main": "dist/index.js",
  "bin": {
    "near-runner-jest": "scripts/jest.js"
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "tsconfig.json",
    "jest.config.js",
    "scripts/setup.js",
    "scripts/jest.js"
  ],
  "scripts": {
    "build": "tsc",
    "lint": "xo",
    "lint:fix": "xo --fix",
    "prepublishOnly": "yarn build",
    "test": "node scripts/jest.js --verbose",
    "test:ci": "NEAR_RUNNER_DEBUG=true yarn test",
    "prepare": "husky install"
  },
  "dependencies": {
    "@types/bn.js": "^5.1.0",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.4.10",
    "jest": "^27.0.6",
    "near-runner": "0.6.1",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  },
  "devDependencies": {
    "husky": "^7.0.1",
    "xo": "^0.44.0"
  },
  "engines": {
    "node": "^14.17.0 || >=16.0.0",
    "npm": ">= 6.0.0"
  },
  "xo": {
    "space": true,
    "rules": {
      "unicorn/prefer-node-protocol": 0,
      "unicorn/prefer-module": 0,
      "unicorn/no-array-callback-reference": 0,
      "node/prefer-global/url": 0
    },
    "overrides": [
      {
        "files": "__tests__/**/*.spec.ts",
        "rules": {
          "@typescript-eslint/no-unsafe-assignment": 0,
          "unicorn/prefer-module": 0,
          "@typescript-eslint/no-unsafe-call": 0,
          "@typescript-eslint/no-empty-function": 0
        }
      }
    ]
  },
  "jest": {
    "projects": [
      "./scripts"
    ]
  }
}